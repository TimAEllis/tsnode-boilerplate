{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": [
		"plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"project": "./tsconfig.json",
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"@typescript-eslint/indent": [
			"warn",
			"tab",
			{ "SwitchCase": 1 }
		],
		"no-console": "error"
	},
	"root": true
}
